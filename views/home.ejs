<%- include('partials/header') %>
<div class="posts-section">
    <div class="welcome-section">
        <div class="container-fluid">
            <h1>Welcome Back!</h1>
            <p><%= start %></p>

            <%  posts.forEach(function(post){ %>

                <h1><%=post.title%></h1>
                <p>
                <%=post.content.substring(0, 100) + " ..."%>
                <a href="/posts/<%=post._id%>">Read More</a>
                </p>
            
            
                <% }) %>

        </div>
    </div>
</div>





